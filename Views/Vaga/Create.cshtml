@model NewJob.Models.Vaga

@{
    ViewData["Title"] = "Create Vaga";
}

<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Criar</title>
</head>

<body>

    <h4>Cadastro vaga</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Empresa" class="control-label"></label>
                    <input asp-for="Empresa" class="form-control" />
                    <span asp-validation-for="Empresa" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <label asp-for="Setor" class="control-label"></label>
                    <input asp-for="Setor" class="form-control" />
                    <span asp-validation-for="Setor" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <label asp-for="Responsavel" class="control-label"></label>
                    <input asp-for="Responsavel" class="form-control" />
                    <span asp-validation-for="Responsavel" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <label asp-for="CNPJ" class="control-label"></label>
                    <input asp-for="CNPJ" class="form-control" />
                    <span asp-validation-for="CNPJ" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <label asp-for="Vagas" class="control-label"></label>
                    <input asp-for="Vagas" class="form-control" />
                    <span asp-validation-for="Vagas" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Descricao" class="control-label"></label>
                    <input asp-for="Descricao" class="form-control" />
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Link_Vaga" class="control-label"></label>
                    <input asp-for="Link_Vaga" class="form-control" />
                    <span asp-validation-for="Link_Vaga" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Criar" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Ir para a lista</a>
    </div>

</body>

</html>
